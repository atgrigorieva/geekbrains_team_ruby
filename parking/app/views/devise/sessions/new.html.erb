
<div id="root">
  <div class="row row_div">
    <div id="div_road" class="col-6">
      <div>
        <img src='/images/operator.png' />
      </div>
      <div>
        <img src='/images/road.png' />
      </div>
    </div>
    <div id="div_road" class="col-6">
      <div class="logotype">
        <img src='/images/logotype.png' alt="Логотип"/>
      </div>
      <div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form_input") do |f| %>
          <div class="form-group">
            <%= f.label :login %><br />
            <%= f.text_field :login, autofocus: true,
                 class: "form-control",
                  "aria-describedby".to_sym => "LoginHelp",
                   id: "exampleInputLogin",
                   placeholder: "Введите логин" %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, 
              autocomplete: "current-password",
              class: "form-control",
              id: "exampleInputPassword1",
              placeholder: "Введите пароль"%>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <%= render "devise/shared/links" %>
          <div id="button">
            <%= f.submit "Войти", id: "enter" %>
          </div>
        <% end %>
      </div>


  </div>
</div>